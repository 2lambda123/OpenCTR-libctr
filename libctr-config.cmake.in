@PACKAGE_INIT@

set(CMAKE_CONFIG_PREFIX @PACKAGE_CONFIG_PREFIX@)

include(${CMAKE_CONFIG_PREFIX}/libctr-targets.cmake OPTIONAL)

if(TARGET CTR::libctr)
	get_property(LIBCTR_LIBRARY TARGET CTR::libctr PROPERTY LOCATION)
	get_property(LIBCTR_INCLUDE_DIR TARGET CTR::libctr PROPERTY INTERFACE_INCLUDE_DIRECTORIES)
endif()

include(${CMAKE_ROOT}/Modules/FindPackageHandleStandardArgs.cmake)

find_package_handle_standard_args(libctr DEFAULT_MSG LIBCTR_LIBRARY LIBCTR_INCLUDE_DIR)
